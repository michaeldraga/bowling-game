{
  "compilerOptions": {
    "strictFunctionTypes": true,
    "lib": [
      "ESNext",
      "dom"
    ],
    "outDir": "dist",
    "removeComments": true,
    "target": "ES2020",
    "module": "CommonJS",
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {},
    "sourceMap": true,
    "sourceRoot": "/",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules/**/*"
  ]
}